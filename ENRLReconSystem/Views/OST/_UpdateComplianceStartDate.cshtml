
@using ENRLReconSystem.Helpers
@using ENRLReconSystem.DO
@model DOGEN_OSTActions


<div class="clearfix">
    @Html.HiddenFor(m => m.AdjustedComplianceStartDate, new { @id = "hdnAdjustedComplianceStartDate" })
   

     <div class="form-group date-group col-md-3">
        <label class="required">Adjusted Compliance Start Date</label>
        @Html.DateTimeFor(m => m.AdjustedComplianceStartDate, false, new CustomValidation().Required("Adjusted Compliance Start Date is Required").validationAttributes)
    </div> 
    <div class="form-group col-md-3">
            <label>Adjusted Disenrollment Date </label>
            @Html.TextBoxFor(m => m.AdjustedDisenrollmentDate, new CustomValidation().AddCssClass("form-control").CustomAttributes("id", "txtAdjustDisenrollmentDate").CustomAttributes("readonly", "raedonly").validationAttributes)
   </div> 
    <div class="form-group textarea col-md-12">
        <label class="required">Comments</label>
        @Html.TextAreaFor(m => m.Comments, new CustomValidation().AddCssClass("form-control").Required("Please enter Comments").CustomAttributes("id", "txtComments").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
    </div>
</div>

<script>
 
    if ('@Model.AdjustedComplianceStartDate' != null && '@Model.AdjustedComplianceStartDate' != '') {
        //fnSetDateToField('@Model.AdjustedComplianceStartDate','AdjustedComplianceStartDate');
        $('#AdjustedComplianceStartDate_DPart').val(getDateTimeInMMDDYYYY('@Model.AdjustedComplianceStartDate'));
    }
     if ('@Model.AdjustedDiscrepancyReceiptDate' != null && '@Model.AdjustedDiscrepancyReceiptDate' != '') {
        // fnSetDateToField('@Model.AdjustedDiscrepancyReceiptDate','AdjustedDiscrepancyReceiptDate');
         $('#AdjustedDiscrepancyReceiptDate_DPart').val(getDateTimeInMMDDYYYY('@Model.AdjustedDiscrepancyReceiptDate'));
    }
</script>

