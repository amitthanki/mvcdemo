@using ENRLReconSystem.Helpers
@using ENRLReconSystem.DO
@model DOGEN_OSTActions


    <div class="clearfix">
        @Html.HiddenFor(m => m.FirstLetterMailDate)
        @Html.HiddenFor(m => m.SecondLetterMailDate)
        @Html.HiddenFor(m => m.AdjustedComplianceStartDate ,new { @id= "hdnAdjustedComplianceStartDate" })
        @Html.HiddenFor(m => m.AdjustedDiscrepancyReceiptDate, new { @id = "hdnAdjustedDiscrepancyReceiptDate" })

        <div class="form-group date-group col-md-3">
            <label class="required">First Letter Mail Date</label>
            @Html.DateTimeFor(m => m.FirstLetterMailDate, false, new CustomValidation().Required("First Letter Mail Date  is required.").validationAttributes)
        </div>
        <div class="form-group date-group col-md-3">
            <label class="required">Second Letter Mail Date</label>
            @Html.DateTimeFor(m => m.SecondLetterMailDate, false, new CustomValidation().Required("Second Letter Mail Date  is required.").validationAttributes)
        </div>
        <div class="form-group date-group col-md-3">
            <label>Adjusted Compliance Start Date</label>
            @Html.DateTimeFor(m => m.AdjustedComplianceStartDate, false, new CustomValidation().validationAttributes)
        </div>
        <div class="form-group date-group col-md-3">
            <label>Adjusted Discrepancy Receipt Date</label>
            @Html.DateTimeFor(m => m.AdjustedDiscrepancyReceiptDate, false, new CustomValidation().validationAttributes)
        </div>
            @if (ViewBag.source != "MassUpdate")
            {
        <div class="form-group col-md-3">
            <label>Adjusted Disenrollment Date </label>
            @Html.TextBoxFor(m => m.AdjustedDisenrollmentDate, new CustomValidation().AddCssClass("form-control").CustomAttributes("id", "txtAdjustDisenrollmentDate").CustomAttributes("readonly", "raedonly").validationAttributes)
        </div>
            }
            <div class="form-group textarea col-md-12">
                <label class="required">Comments</label>
                @Html.TextAreaFor(m => m.Comments, new CustomValidation().AddCssClass("form-control").Required("Please enter Comments").CustomAttributes("id", "txtComments").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
            </div>
    </div>

<script>

    if ('@Model.FirstLetterMailDate' != null && '@Model.FirstLetterMailDate' != '') {
        $('#FirstLetterMailDate_DPart').val(getDateTimeInMMDDYYYY('@Model.FirstLetterMailDate'));
        //fnSetDateToField('@Model.FirstLetterMailDate','FirstLetterMailDate');
    }
    if ('@Model.SecondLetterMailDate' != null && '@Model.SecondLetterMailDate' != '') {
        $('#SecondLetterMailDate_DPart').val(getDateTimeInMMDDYYYY('@Model.SecondLetterMailDate'));
       // fnSetDateToField('@Model.SecondLetterMailDate','SecondLetterMailDate');
    }
    if ('@Model.AdjustedComplianceStartDate' != null && '@Model.AdjustedComplianceStartDate' != '') {
        //fnSetDateToField('@Model.AdjustedComplianceStartDate','AdjustedComplianceStartDate');
        $('#AdjustedComplianceStartDate_DPart').val(getDateTimeInMMDDYYYY('@Model.AdjustedComplianceStartDate'));
    }
     if ('@Model.AdjustedDiscrepancyReceiptDate' != null && '@Model.AdjustedDiscrepancyReceiptDate' != '') {
        // fnSetDateToField('@Model.AdjustedDiscrepancyReceiptDate','AdjustedDiscrepancyReceiptDate');
         $('#AdjustedDiscrepancyReceiptDate_DPart').val(getDateTimeInMMDDYYYY('@Model.AdjustedDiscrepancyReceiptDate'));
    }
</script>

