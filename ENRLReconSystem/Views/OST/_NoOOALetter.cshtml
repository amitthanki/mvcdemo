
@using ENRLReconSystem.Helpers
@using ENRLReconSystem.DO
@model DOGEN_OSTActions


<div class="clearfix">
    @Html.HiddenFor(m => m.FirstLetterMailDate)
    <div class="form-group date-group col-md-3">
        <label class="required">First Letter Mail Date</label>
        @Html.DateTimeFor(m => m.FirstLetterMailDate, false, new CustomValidation().Required("First Letter Mail Date  is required.").validationAttributes)
    </div>
    <div class="form-group textarea col-md-12">
        <label>Comments</label>
        @Html.TextAreaFor(m => m.Comments, new CustomValidation().AddCssClass("form-control").CustomAttributes("id", "txtComments").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
    </div>
</div>

<script>
    if ('@Model.FirstLetterMailDate' != null && '@Model.FirstLetterMailDate' != '') {
       // fnSetDateToField('@Model.FirstLetterMailDate','FirstLetterMailDate');
        $('#FirstLetterMailDate_DPart').val(getDateTimeInMMDDYYYY('@Model.FirstLetterMailDate'));
    }
</script>

