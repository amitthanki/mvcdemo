@using ENRLReconSystem.Helpers
@using ENRLReconSystem.DO
@model DOGEN_OSTActions

@Html.HiddenFor(m => m.SecondLetterMailDate)
@if (ViewBag.sendNotification != "sendNotification")
{
    <div class="clearfix">
        @Html.HiddenFor(m => m.SecondLetterMailDate)
            <div class="form-group date-group col-md-3">
                <label for="txtLastName" class="required">Second Letter Mail Date</label>
                @Html.DateTimeFor(m => m.SecondLetterMailDate, false, new CustomValidation().Required("Please enter Second Letter Mail Date").CustomAttributes("id", "txtSecondLetterMailDate").validationAttributes)
            </div>
            <div class="form-group textarea col-md-12">
                <label class="required">Comments</label>
                @Html.TextAreaFor(m => m.Comments, new CustomValidation().AddCssClass("form-control").CustomAttributes("id", "txtComments").Required("Please enter Comments.").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
            </div>
        
    </div>
}
