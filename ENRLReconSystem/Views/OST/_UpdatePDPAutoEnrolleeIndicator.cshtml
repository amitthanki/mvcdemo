@using ENRLReconSystem.Utility
@using ENRLReconSystem.Helpers
@using ENRLReconSystem.DO
@model DOGEN_OSTActions
@if (ViewBag.UpdatePDP != "UpdatePDP")
{
<div class="clearfix">
    <div class="form-group col-md-3">
        <label class="required">PDP Auto Enrollee Indicator </label>
        @Html.DropDownListFor(m => m.PDPAutoEnrolleeInd, new SelectList(Model.lstPDPAutoEnrolleeInd, "LookupValue1", "LookupValue"), ConstantTexts.dropdownDefaultValue, new CustomValidation().Required("Please select PDP Auto Enrollee Indicator.").AddCssClass("form-control").validationAttributes)
    </div>
    <div class="form-group textarea col-md-12">
        <label for="txtComments" class="required">Comments</label>
        @Html.TextAreaFor(m => m.Comments, new CustomValidation().AddCssClass("form-control").CustomAttributes("id", "txtComments").Required("Please enter Comments.").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
    </div>

</div>
}
else
{
    <script type="text/javascript">
        MainLayout.fnAlertMessege("Error!", "Cannot Update PDP Auto Indicator for LOB is MA.");
        $("#ddlActions").val('');
    </script>
}

