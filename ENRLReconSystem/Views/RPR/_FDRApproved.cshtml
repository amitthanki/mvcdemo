@using ENRLReconSystem.Helpers
@using ENRLReconSystem.Utility
@using ENRLReconSystem.DO
@model DOGEN_RPRActions

<div class="clearfix">
    @Html.HiddenFor(m => m.FDRReceivedDate)
    <div class="form-group col-md-3">
        @Html.LabelFor(m => m.FDRStatusLkup, "FDR Status", new { @class = "required" })
        @Html.DropDownListFor(m => m.FDRStatusLkup, new SelectList(Model.lstFDRStatus, "CMN_LookupMasterId", "LookupValue"), ConstantTexts.dropdownDefaultValue, new CustomValidation().CustomAttributes("id", "ddlFDRStatusLkup").Required("Please select FDR Status.").AddCssClass("form-control").validationAttributes)
    </div>
    <div class="form-group col-md-3" id="divOtherFDRStatus" hidden="hidden">
        @Html.LabelFor(m => m.OtherFDRStatus, "Other FDR Status", new { @class = "required" })
        @Html.TextBoxFor(m => m.OtherFDRStatus, new CustomValidation().Required("Other FDR Status is required").CustomAttributes("id", "txtOtherFDRStatus").CustomAttributes("disabled", "disabled").RegularExpression(RegexType.AlphabetsWithNumericSpacesAndAmpersand, "Other Action Requested").StringMaxLength(50, "Other Action Requested").AddCssClass("form-control").validationAttributes)
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(m => m.FDRRejectionTypeLkup, " FDR Rejection Type", new { @class = "required" })
        @Html.DropDownListFor(m => m.FDRRejectionTypeLkup, new SelectList(Model.lstFDRRejectionType, "CMN_LookupMasterId", "LookupValue"), ConstantTexts.dropdownDefaultValue, new CustomValidation().CustomAttributes("disabled", "disabled").CustomAttributes("id", "ddlFDRRejectionTypeLkup").Required("Please select FDR Rejection Type.").AddCssClass("form-control").validationAttributes)
    </div>
    <div class="form-group date-group col-md-3">
        @Html.LabelFor(m => m.FDRReceivedDate, "FDR Recieved Date", new { @class = "required" })
        @Html.DateTimeFor(m => m.FDRReceivedDate, false, new CustomValidation().Required("FDR Recieved Date").AddCssClass("form-control").validationAttributes)
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(m => m.FDRCodeReceived, "FDR Code Recieved", new { @class = "required" })
        @Html.TextBoxFor(m => m.FDRCodeReceived, new CustomValidation().Required("FDR Code Recieved is Required").AddCssClass("form-control").CustomAttributes("maxlength", "20").StringMaxLength(20, "FDR Code Recieved").validationAttributes)
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(m => m.FDRDescription, "FDR Description")
        @Html.TextBoxFor(m => m.FDRDescription, new CustomValidation().AddCssClass("form-control").CustomAttributes("maxlength", "500").StringMaxLength(500, "FDR Description").validationAttributes)
    </div>
    <div class="form-group textarea col-md-12">
        @Html.LabelFor(m => m.Comments, "Comments", new { @class = "required" })
        @Html.TextAreaFor(m => m.Comments, new CustomValidation().Required("Comments are Required").AddCssClass("form-control").CustomAttributes("id", "txtComments").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
    </div>
</div>
<script>
        //validate and create date time picker fields
    if ('@Model.FDRReceivedDate' != null && '@Model.FDRReceivedDate' != '') {
        //fnSetDateToField('@Model.FDRReceivedDate','FDRReceivedDate');
        $('#FDRReceivedDate_DPart').val(getDateTimeInMMDDYYYY('@Model.FDRReceivedDate'));
    }
</script>