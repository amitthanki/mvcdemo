@using ENRLReconSystem.Helpers
@using ENRLReconSystem.DO
@model DOGEN_RPRActions

<div class="clearfix">
    @*@Html.HiddenFor(m => m.EndDate)
    @Html.HiddenFor(m => m.ApplicationDate)*@
    @Html.HiddenFor(m => m.RPCSubmissionDate)

    @if (Model.CMSAccountManagerApprovalDate != null)//when current queue is CMS account manager sent
    {
        @Html.HiddenFor(m => m.CMSAccountManagerApprovalDate)
        <div class="form-group date-group col-md-3">
            @Html.LabelFor(m => m.CMSAccountManagerApprovalDate, "CMS Account Manager Approval Date", new { @class = "required" })
            @Html.DateTimeFor(m => m.CMSAccountManagerApprovalDate, false, new CustomValidation().Required("Please select RPC Submission Date").AddCssClass("form-control").validationAttributes)
        </div>
    }

    <div class="form-group date-group col-md-3">
        @Html.LabelFor(m => m.RPCSubmissionDate, "RPC Submission Date", new { @class = "required" })
        @Html.DateTimeFor(m => m.RPCSubmissionDate, false, new CustomValidation().Required("Please select RPC Submission Date").AddCssClass("form-control").validationAttributes)
    </div>

    @*<div class="form-group date-group col-md-3">
        @Html.LabelFor(m => m.IncludeInTodaysSubmission, "Include In Today's Submission")
        @Html.CheckBoxFor(m => m.IncludeInTodaysSubmission, new { @class = "form-control", @id = "cbxIncludeInTodaysSubmission" })
    </div>*@



    <div class="form-group textarea col-md-12">
        @Html.LabelFor(m => m.Comments, "Comments", new { @class = "required" })
        @Html.TextAreaFor(m => m.Comments, new CustomValidation().AddCssClass("form-control").Required("Comments are Required.").CustomAttributes("id", "txtComments").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
    </div>
</div>
<script>
        //validate and create date time picker fields
    if ('@Model.RPCSubmissionDate' != null && '@Model.RPCSubmissionDate' != '') {
       // fnSetDateToField('@Model.RPCSubmissionDate','RPCSubmissionDate');
        $('#RPCSubmissionDate_DPart').val(getDateTimeInMMDDYYYY('@Model.RPCSubmissionDate'));
    }
   if ('@Model.CMSAccountManagerApprovalDate' != null && '@Model.CMSAccountManagerApprovalDate' != '') {
       $('#CMSAccountManagerApprovalDate_DPart').val(getDateTimeInMMDDYYYY('@Model.CMSAccountManagerApprovalDate'));
    }
</script>
