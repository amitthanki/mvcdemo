@using ENRLReconSystem.Utility
@using ENRLReconSystem.Helpers
@model ENRLReconSystem.DO.DOGEN_EligibilityActions
              
    <div class="clearfix">       
            <div class="form-group col-md-3">
                <label class="required" for="inputEmail">Contains Errors</label>
                @Html.DropDownListFor(m => m.ContainsErrorsLkup, new SelectList(Model.lstContainsError, "LookupValue1", "LookupValue"), ConstantTexts.dropdownDefaultValue, new CustomValidation().AddCssClass("form-control").Required("Please Select Contains Errors").validationAttributes)
            </div>
            <div class="form-group textarea col-md-12">
                <label class="required" for="inputEmail">Comments</label>
                @Html.TextAreaFor(m => m.Comments, new CustomValidation().AddCssClass("form-control").Required("Comments is Required").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
            </div>        
    </div>
               