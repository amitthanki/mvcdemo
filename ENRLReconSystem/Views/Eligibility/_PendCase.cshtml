@using ENRLReconSystem.Utility
@using ENRLReconSystem.Helpers
@model ENRLReconSystem.DO.DOGEN_EligibilityActions
                

  
    <div class="clearfix">                                   
            <div class="form-group col-md-3">
                <label class="required" for="inputEmail">Pend Reason</label>
                @Html.DropDownListFor(m => m.PendReasonLkup, new SelectList(Model.lstPendReason, "CMN_LookupMasterChildRef", "LookupMasterChildValue"), ConstantTexts.dropdownDefaultValue, new CustomValidation().Required("Please Select Pend Reason").AddCssClass("form-control").validationAttributes)
            </div>                               
            <div class="form-group textarea col-md-12">
                <label class="required" for="inputEmail">Comments</label>
                @Html.TextAreaFor(m => m.Comments, new CustomValidation().AddCssClass("form-control").Required("Comments is Required").CustomAttributes("id", "txtComments").CustomAttributes("maxlength", "4000").StringMaxLength(4000, "Comments").validationAttributes)
            </div>      
    </div>

              